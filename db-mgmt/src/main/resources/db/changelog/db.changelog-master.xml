<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="yourname">
        <createTable tableName="bets">
            <column name="bet_id" type="NUMERIC(19,0)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="event_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="event_market_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="event_winner_id" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="bet_amount" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <include file="db-mgmt/src/main/resources/db/changelog/db.changelog-insert-bets.xml"/>

</databaseChangeLog>
